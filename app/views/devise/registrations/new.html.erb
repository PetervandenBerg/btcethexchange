<div id="signup" style="">
  <div class="container">
    <div class="row header">
      <div class="col-md-12">
        <h4>Set up your new account today.</h4>
      </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="wrapper clearfix">
                <div class="formy">
                    <div class="row">
                        <div class="col-md-12">
                          <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
                          <%= devise_error_messages! %>                                  
                                <div class="form-group">
                                    <label for="email">Email address</label>
                                    <%= f.email_field :email, :autofocus => true, class: "form-control", id:"email" %>
                                </div>
                                <div class="form-group">
                                    <label for="password">Password</label>
                                    <%= f.password_field :password, class: "form-control", id: "password" %>
                                </div>
                                <div class="form-group">
                                    <label for="password">Password confirmation</label>
                                    <%= f.password_field :password_confirmation, class: "form-control", id: "password" %>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox"> You have read &amp; agree to the 
                                        <a href="#">Terms of service</a>.
                                    </label>
                                </div>
                                <div class="submit">
                                    <%= f.submit "Sign up", class: "button" %>
                                </div>
                            <% end %>
                        </div>
                    </div>                      
                </div>
            </div>
            <div class="already-account">
              <%= link_to "Already have an account?", new_user_session_path %>
            </div>
        </div>
      </div>
  </div>

  <script type="text/javascript">
      $(function () {
          $(".already-account a").popover();
          $(".already-account a").popover('show');
      });
  </script>

</div>